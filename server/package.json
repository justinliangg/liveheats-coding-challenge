{
    "name": "nestjs-template",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier -c \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:strict": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "typecheck": "tsc --noEmit --incremental false",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:unit": "jest --config ./test/jestUnit.json --verbose",
        "test:integration": "jest --config ./test/integration/jestIntegration.json --runInBand --detectOpenHandles --verbose",
        "seed:s3": "npx ts-node -r tsconfig-paths/register seeder/seedS3.ts",
        "seed:db": "npx ts-node -r tsconfig-paths/register seeder/seedDb.ts"
    },
    "dependencies": {
        "@nestjs/axios": "^4.0.0",
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.3",
        "@nestjs/platform-express": "^11.1.3",
        "@nestjs/swagger": "^11.2.0",
        "@prisma/client": "^6.9.0",
        "axios": "^1.9.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "dotenv": "^16.5.0",
        "nest-winston": "^1.10.2",
        "pg": "^8.16.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.8.0",
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.3",
        "@types/express": "^5.0.3",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/multer": "^1.4.13",
        "@types/node": "^22.15.30",
        "@types/pg": "^8.15.4",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "fishery": "^2.3.1",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "prisma": "^6.9.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.1",
        "testcontainers": "^11.0.1",
        "ts-jest": "^29.3.4",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "engines": {
        "node": ">=18"
    }
}
