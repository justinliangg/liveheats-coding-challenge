{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../../",
    "testEnvironment": "node",
    "testRegex": ".unit.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": ["./test/unit/setupTests.ts"],
    "moduleNameMapper": {
        "^@src/(.*)$": "<rootDir>/src/$1",
        "^@test/(.*)$": "<rootDir>/test/$1"
    }
}
